{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "module": "ESNext",
      "moduleResolution": "bundler",
      "target": "ESNext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "sourceMap": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
{
  "name": "@repo/objknex",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "migrate:latest": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' knex migrate:latest --knexfile=./src/knexfile.ts",
    "make-seed": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' knex seed:make --knexfile=./src/knexfile.ts",
    "migrate:rollback": "knex migrate:rollback"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "ts-node": "^10.9.2",
    "typescript": "latest"
  },
  "dependencies": {
    "knex": "^3.1.0",
    "objection": "^3.1.5",
    "pg": "^8.15.6"
  }
}
